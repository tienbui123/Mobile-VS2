<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:layout_below="@id/linearHP"
    android:layout_alignParentBottom="true">
    <TextView
        android:text="Tổng số TC: "
        android:textColor="@android:color/background_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dip"
        android:id="@+id/txtTSTC"
        android:layout_marginTop="10px" />
    <TextView
        android:text="Tổng số Tiền Học Phí: "
        android:textColor="@android:color/background_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dip"
        android:id="@+id/txtTSTHP"
        android:layout_marginTop="10px" />
    <TextView
        android:text="Số tiền đóng tối thiểu lần đầu: "
        android:textColor="@android:color/background_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dip"
        android:id="@+id/txtTTLD"
        android:layout_marginTop="10px" />
    <TextView
        android:text="Tổng số Tiền đã đóng: "
        android:textColor="@android:color/background_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dip"
        android:id="@+id/txtTDD"
        android:layout_marginTop="10px" />
    <TextView
        android:text="Số tiền còn nợ: "
        android:textColor="@android:color/background_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dip"
        android:id="@+id/txtTCN"
        android:layout_marginTop="10px" />
</LinearLayout>